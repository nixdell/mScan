<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.bubblebot" android:versionCode="7" android:versionName="7.0">
	<application android:debuggable="false" android:icon="@drawable/icon">
		<activity android:configChanges="orientation|keyboardHidden|keyboard"
			android:label="@string/app_name" android:screenOrientation="landscape"
			android:permission="android.permission.CAMERA" android:name="BubbleCollect">
		</activity>

		<activity android:name="com.opencv.camera.CameraConfig"
			android:label="@string/app_name" android:configChanges="orientation|keyboardHidden|keyboard"
			android:screenOrientation="landscape">
		</activity>


		<activity android:name="BubbleBot" android:screenOrientation="portrait"
			android:label="@string/bubblebot_activity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="ViewBubbleForms"
			android:screenOrientation="portrait" android:label="@string/view_bubble_forms_activity">
		</activity>
		<activity android:name="BubbleInstructions"
			android:screenOrientation="portrait" android:label="@string/bubble_instructions_activity">
		</activity>
		<activity android:name="BubbleProcess"
			android:screenOrientation="portrait" android:label="@string/bubble_process_activity">
		</activity>
		<activity android:name="DisplayProcessedForm"
			android:screenOrientation="portrait" android:label="@string/display_processed_form_activity">
		</activity>
		<activity android:name="DisplayProcessedData"
			android:screenOrientation="portrait" android:label="@string/display_processed_data_activity">
		</activity>
		<activity android:name="AfterPhotoTaken"
			android:screenOrientation="portrait" android:label="@string/after_photo_taken_activity">
		</activity>
		<activity android:name="MScan"></activity>
	</application>

	<uses-feature android:glEsVersion="0x00020000"
		android:required="true" />
		
	<uses-permission android:name="android.permission.CAMERA"></uses-permission>
	<uses-feature android:name="android.hardware.camera.flash"></uses-feature>
	<uses-feature android:name="android.hardware.sensor.accelerometer"></uses-feature>
	<uses-feature android:name="android.hardware.touchscreen"></uses-feature>

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

	<uses-sdk android:minSdkVersion="6" android:targetSdkVersion="6" />
</manifest> 
